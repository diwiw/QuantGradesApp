{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Config: Linux Debug",
            "type": "shell",
            "command": "cmake --preset linux-debug",
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "clear": true
            }
        },
        {
            "label": "Config: Linux Release",
            "type": "shell",
            "command": "cmake --preset linux-release",
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "clear": true
            }
        },
        {
            "label": "Config: Windows Release",
            "type": "shell",
            "command": "cmake --preset windows-release",
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "clear": true
            }
        },
        {
            "label": "Build: Linux Debug (All)",
            "type": "shell",
            "command": "cmake --build --preset build-linux-debug --parallel",
            "dependsOn": [
                "Config: Linux Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "Build: Linux Release (All)",
            "type": "shell",
            "command": "cmake --build --preset build-linux-release --parallel",
            "dependsOn": [
                "Config: Linux Release"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "Build: Windows Release",
            "type": "shell",
            "command": "cmake --build --preset build-windows-release --parallel",
            "dependsOn": [
                "Config: Windows Release"
            ],
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "Build: API Server (Debug)",
            "type": "shell",
            "command": "cmake --build --preset build-linux-debug --target qga_api --parallel",
            "dependsOn": [
                "Config: Linux Debug"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Doc: Generate Doxygen",
            "type": "shell",
            "command": "cmake --build --preset build-docs",
            "dependsOn": [
                "Config: Linux Debug"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Test: Unit Tests (Debug)",
            "type": "shell",
            "command": "ctest --preset test-unit-linux",
            "dependsOn": [
                "Build: Linux Debug (All)"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            }
        },
        {
            "label": "Tool: Perf Profiling",
            "type": "shell",
            "command": "cmake --build --preset build-profiling --parallel && ./tools/profiling/perf.sh ./build/linux-profiling/bin/qga_cli config/perf_config.json",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "Admin: Clean Build",
            "type": "shell",
            "command": "rm -rf build/",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            }
        }
    ]
}
