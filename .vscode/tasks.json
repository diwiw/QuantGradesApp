{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Config: Linux Debug",
            "type": "shell",
            "command": "cmake --preset linux-debug",
            "group": "build"
        },
        {
            "label": "Config: Linux Release",
            "type": "shell",
            "command": "cmake --preset linux-release",
            "group": "build"
        },
        {
            "label": "Config: Windows Debug",
            "type": "shell",
            "command": "cmake --preset windows-debug",
            "group": "build"
        },
        {
            "label": "Config: Windows Release",
            "type": "shell",
            "command": "cmake --preset windows-release",
            "group": "build"
        },
        {
            "label": "Build: Linux Debug (All)",
            "type": "shell",
            "command": "cmake --build --preset build-linux-debug --parallel",
            "dependsOn": [
                "Config: Linux Debug"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build: Windows Debug (All)",
            "type": "shell",
            "command": "cmake --build --preset build-windows-debug --parallel",
            "dependsOn": [
                "Config: Windows Debug"
            ],
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build: Linux Release (All)",
            "type": "shell",
            "command": "cmake --build --preset build-linux-release --parallel",
            "dependsOn": [
                "Config: Linux Release"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build: Windows Release",
            "type": "shell",
            "command": "cmake --build --preset build-windows-release --parallel",
            "dependsOn": [
                "Config: Windows Release"
            ],
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build: API Server (Debug)",
            "type": "shell",
            "command": "cmake --build --preset build-linux-debug --target qga_api --parallel",
            "dependsOn": [
                "Config: Linux Debug"
            ],
            "group": "build"
        },
        {
            "label": "Build: CLI Tool (Debug)",
            "type": "shell",
            "command": "cmake --build --preset build-linux-debug --target qga_cli --parallel",
            "dependsOn": [
                "Config: Linux Debug"
            ],
            "group": "build"
        },
        {
            "label": "Test: Unit GTests (Linux)",
            "type": "shell",
            "command": "cmake --build --preset build-unit-gtests",
            "dependsOn": [
                "Config: Linux Debug"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Doc: Generate Doxygen",
            "type": "shell",
            "command": "cmake --build --preset build-docs",
            "group": "build"
        },
        {
            "label": "Tool: Perf Profiling",
            "type": "shell",
            "command": "cmake --build --preset build-linux-profiling --parallel",
            "group": "test"
        },
        {
            "label": "Admin: Clean Build",
            "type": "shell",
            "command": "rm -rf build/",
            "group": "build"
        }
    ]
}
