{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25
    },
    "configurePresets": [
        {
            "name": "base-common",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_FEATURE_FLAGS": "manifests"
            }
        },
        {
            "name": "base-linux",
            "hidden": true,
            "inherits": "base-common",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
                "BUILD_DOCS": "OFF"
            }
        },
        {
            "name": "base-windows",
            "hidden": true,
            "inherits": "base-common",
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows-static"
            }
        },
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "inherits": "base-linux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_EXAMPLES": "ON",
                "BUILD_API": "ON",
                "BUILD_TESTING": "ON"
            }
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release",
            "inherits": "base-linux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_EXAMPLES": "ON",
                "BUILD_API": "ON",
                "BUILD_TESTING": "OFF"
            }
        },
        {
            "name": "windows-release",
            "displayName": "Windows Release",
            "inherits": "base-windows",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_API": "ON",
                "BUILD_TESTING": "OFF"
            }
        },
        {
            "name": "linux-profiling",
            "displayName": "Linux Profiling",
            "inherits": "base-linux",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_CXX_FLAGS": "-O2 -g -fno-omit-frame-pointer",
                "CMAKE_C_FLAGS": "-O2 -g -fno-omit-frame-pointer",
                "BUILD_API": "ON"
            }
        },
        {
            "name": "linux-docs",
            "displayName": "Linux Documentation Build",
            "inherits": "linux-debug",
            "cacheVariables": {
                "BUILD_DOCS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-linux-debug",
            "configurePreset": "linux-debug"
        },
        {
            "name": "build-linux-release",
            "configurePreset": "linux-release"
        },
        {
            "name": "build-windows-release",
            "configurePreset": "windows-release"
        },
        {
            "name": "build-linux-profiling",
            "configurePreset": "linux-profiling"
        },
        {
            "name": "build-docs",
            "configurePreset": "linux-debug",
            "targets": [
                "docs"
            ]
        }
    ],
    "testPresets": [
        {
            "name": "test-unit-linux",
            "configurePreset": "linux-debug",
            "output": {
                "outputOnFailure": true
            },
            "filter": {
                "include": {
                    "label": "unit"
                }
            }
        }
    ]
}
